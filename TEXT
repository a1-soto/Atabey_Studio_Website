  <div class="container py-5">
    <div class="text-center mb-4">
      <h2 class="fw-bold">Calendario de Reservas</h2>
      <p class="text-primary-custom">Seleccione la fecha y hora para su masaje</p>
    </div>

    <div class="d-flex gap-4 mb-4" id="calendarContainer">
      <!-- Calendarios generados por JS -->
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-4">
        <select class="form-select form-select-custom">
          <option>Seleccionar servicio</option>
          <option>Masaje Relajante</option>
          <option>Masaje de Tejido Profundo</option>
          <option>Masaje con Piedras Calientes</option>
        </select>
      </div>
      <div class="col-md-4">
        <select class="form-select form-select-custom">
          <option>Seleccionar terapeuta</option>
          <option>Elena</option>
          <option>Marco</option>
          <option>Sofia</option>
        </select>
      </div>
      <div class="col-md-4">
        <select class="form-select form-select-custom">
          <option>Seleccionar hora</option>
          <option>09:00 AM</option>
          <option>11:00 AM</option>
          <option>02:00 PM</option>
          <option>04:00 PM</option>
        </select>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <button class="btn bg-primary-custom text-white px-4">Confirmar Reserva</button>
    </div>
  </div>
<script>
    const calendarContainer = document.getElementById("calendarContainer");
    const daysOfWeek = ['D', 'L', 'M', 'X', 'J', 'V', 'S'];

    function generateCalendar(year, month) {
      const firstDay = new Date(year, month, 1).getDay();
      const lastDate = new Date(year, month + 1, 0).getDate();

      const calendarDiv = document.createElement('div');
      calendarDiv.classList.add('flex-fill', 'border', 'border-custom', 'p-3', 'rounded-4');

      const monthName = new Date(year, month).toLocaleString('default', { month: 'long' });
      calendarDiv.innerHTML = `
        <div class="d-flex justify-content-between align-items-center mb-2">
          <button class="btn btn-sm border-0 text-primary-custom" onclick="prevMonth()">&lt;</button>
          <h5 class="mb-0">${monthName} ${year}</h5>
          <button class="btn btn-sm border-0 text-primary-custom" onclick="nextMonth()">&gt;</button>
        </div>
        <div class="d-grid" style="grid-template-columns: repeat(7, 1fr); text-align:center; gap:5px;">
          ${daysOfWeek.map(d => `<div class="fw-bold text-primary-custom">${d}</div>`).join('')}
        </div>
        <div class="d-grid mt-1" style="grid-template-columns: repeat(7, 1fr); text-align:center; gap:5px;" id="dates">
        </div>
      `;

      calendarContainer.appendChild(calendarDiv);

      const datesDiv = calendarDiv.querySelector('#dates');
      for (let i = 0; i < firstDay; i++) {
        const empty = document.createElement('div');
        datesDiv.appendChild(empty);
      }

      for (let i = 1; i <= lastDate; i++) {
        const btn = document.createElement('button');
        btn.textContent = i;
        btn.classList.add('calendar-btn');
        btn.addEventListener('click', () => {
          document.querySelectorAll('.calendar-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
        });
        datesDiv.appendChild(btn);
      }
    }

    let currentDate = new Date();

    function renderCalendars() {
      calendarContainer.innerHTML = '';
      generateCalendar(currentDate.getFullYear(), currentDate.getMonth());
      generateCalendar(currentDate.getFullYear(), currentDate.getMonth() + 1);
    }

    function prevMonth() {
      currentDate.setMonth(currentDate.getMonth() - 1);
      renderCalendars();
    }

    function nextMonth() {
      currentDate.setMonth(currentDate.getMonth() + 1);
      renderCalendars();
    }

    renderCalendars();
  </script>



